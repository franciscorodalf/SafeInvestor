<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.franciscorodalf.saveinvestor.frontend.controller.RegistrarAhorroController"
            style="-fx-background-color: #f5f5f5;"
            prefWidth="400" prefHeight="500">

    <!-- TÃ­tulo -->
    <top>
        <Label text="Registrar Ahorro" BorderPane.alignment="CENTER"
               style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <padding>
                <Insets top="20.0" bottom="20.0" />
            </padding>
        </Label>
    </top>

    <!-- Campos de entrada -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="30.0" right="30.0" top="20.0" bottom="20.0" />
            </padding>

            <Label text="Concepto:" style="-fx-font-weight: bold; -fx-font-size: 14px;" alignment="CENTER_LEFT" />
            <TextField fx:id="txtConcepto" promptText="Ej: Salario, Venta, Ingreso..." />

            <Label text="Cantidad:" style="-fx-font-weight: bold; -fx-font-size: 14px;" alignment="CENTER_LEFT">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="txtCantidad" promptText="Ej: 100.50" />

            <Label fx:id="lblMensaje" textFill="RED" alignment="CENTER" visible="false">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>
    </center>

    <!-- Botones -->
    <bottom>
        <HBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Button fx:id="btnVolver" onAction="#onVolver" prefHeight="40.0" prefWidth="100.0" text="Volver" />
            <Button fx:id="btnAceptar" onAction="#onAceptar" prefHeight="40.0" prefWidth="100.0" text="Aceptar"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white;" />
        </HBox>
    </bottom>

</BorderPane>